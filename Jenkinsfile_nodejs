pipeline {
    agent any
   environment {
     VERSION = ''
         
     }

    stages {
        stage ('env_variable'){
           steps {
              def packjson_version = readJSON file : 'package.json'
                env.VERSION = packjson_version.version
            }
         }
        stage('init') {
            steps {
                sh 'ls -ltr'
            }
        }

        stage('build') {
            steps {
                sh """
                export PATH=$PATH:/usr/local/bin
                npm --version
                npm install
                npm install nodejs
                ls -ltr
                echo $VERSION
                
                """
            }
        }
    }

    post {
        always {
            echo "I will always say Hello again"
        }

        success {
            echo 'I will run when pipeline is successful'
        }

        failure {
            echo "I will run when the pipeline fails"
        }
    }
}
